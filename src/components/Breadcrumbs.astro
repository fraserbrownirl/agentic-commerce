---
interface Props {
  items: { name: string; url: string }[];
}
const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex items-center gap-1 text-xs text-muted-foreground">
    {items.map((item, i) => (
      <>
        {i > 0 && (
          <li aria-hidden="true" class="select-none">
            <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </li>
        )}
        <li>
          {i === items.length - 1 ? (
            <span class="text-foreground font-medium">{item.name}</span>
          ) : (
            <a href={item.url} class="hover:text-foreground transition-colors">{item.name}</a>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>
