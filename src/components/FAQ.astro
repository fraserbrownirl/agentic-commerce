---
interface Props {
  items: { question: string; answer: string }[];
}
const { items } = Astro.props;
---

<section class="mt-12 space-y-2">
  <h2 class="text-2xl font-bold mb-4">Frequently Asked Questions</h2>
  {items.map((item) => (
    <details class="border border-border rounded p-4 group">
      <summary class="cursor-pointer font-semibold text-sm list-none flex items-center justify-between">
        <h3 class="inline text-sm font-semibold">{item.question}</h3>
        <svg class="w-4 h-4 text-muted-foreground transition-transform group-open:rotate-180 shrink-0 ml-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </summary>
      <p class="mt-3 text-sm text-muted-foreground leading-relaxed">{item.answer}</p>
    </details>
  ))}
</section>
