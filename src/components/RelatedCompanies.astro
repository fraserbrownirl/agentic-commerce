---
interface Props {
  companies: { name: string; slug: string }[];
}
const { companies } = Astro.props;
---

<section class="mt-12 space-y-4">
  <h2 class="text-2xl font-bold">Related Companies</h2>
  <div class="grid md:grid-cols-3 gap-4">
    {companies.map((company) => (
      <a
        href={`/${company.slug}`}
        class="p-4 border border-border rounded-lg hover:border-accent transition-colors group"
      >
        <p class="text-xs font-semibold uppercase tracking-widest text-accent mb-2">
          {company.name}
        </p>
        <p class="text-sm text-muted-foreground group-hover:text-foreground transition-colors">
          Read about {company.name}'s agentic commerce strategy &rarr;
        </p>
      </a>
    ))}
  </div>
</section>
